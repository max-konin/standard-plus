doctype html
html
  head
    title УК "Станодарт+"

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    script src="http://maps.api.2gis.ru/2.0/loader.js?pkg=full" data-turbolinks-track='false'
  body
    header.navbar-inverse.navbar-static-top.without-margin-buttom
      .container
        = link_to '/', class: 'navbar-brand'
          | Стандарт &nbsp;
          i.fa.fa-plus

        nav.collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a О компании
            = active_link_to 'Новости', news_index_path, wrap_tag: 'li'
            li
              a Наши услуги
            li
              a Пункты приема платежей
            = active_link_to 'Вопрос-Ответ', questions_path, wrap_tag: 'li'
            = active_link_to 'Контакты', contacts_path, wrap_tag: 'li'
          ul.nav.navbar-nav.navbar-right

            a.navbar-brand href='tel:+7(3462)71-24-33'
              | +7(3462)71-24-33
    .custom-page-header.green
      .container
        = yield :header

    = yield

    footer
      .navbar-inverse
        .container
          .pull-left
            p.text-muted
              = "\u00A9"
              | &nbsp;
              = Date.today.year
              |   УК "Стандарт Плюс"
          .pull-right
            p.text-muted
              | Сайт разработан в &nbsp;
              a href="http://kerweb.ru"
                | Kernel Web


  javascript:
    new WOW().init();